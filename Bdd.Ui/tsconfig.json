{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": false,
        "removeComments": false,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "outDir": "tmp",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "cucumber"
        ],
        "skipLibCheck": true
    },
    "exclude": [
        "node_modules",
        "tmp"
    ]
}